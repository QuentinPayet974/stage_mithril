<p id="notice"><%= notice %></p>

<br>
<h1>Teachers</h1>

<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Subject</th>
      <th>Classroom</th>
      <th>Edit</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @teachers.each do |teacher| %>
      <tr>
        <td><%= teacher.first_name.capitalize %></td>
        <td><%= teacher.last_name.upcase %></td>
        <td><%= teacher.subject.capitalize %></td>
        <td><%= link_to teacher.classroom&.room_number, classroom_path(teacher.classroom_id) %></td>
        <td><%= link_to 'Show', teacher %>
        <%if current_user.admin %>
        <%= link_to 'Edit', edit_teacher_path(teacher) %>
        <%= link_to 'Destroy', teacher, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <%end%>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

  <%if current_user.admin %>
<%= link_to 'New Teacher', new_teacher_path %>
  <%end%>