<p id="notice"><%= notice %></p>

<br>
<h1>Students</h1>

<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Birth date</th>
      <th>Classroom</th>
      <th>Edit</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @students.each do |student| %>
      <tr>
        <td><%= student.first_name.capitalize %></td>
        <td><%= student.last_name.upcase %></td>
        <td><%= student.birth_date.strftime("%d/%m/%Y") %></td>
        <td><%= link_to student.classroom&.room_number, classroom_path(student.classroom_id) %></td>
        <td><%= link_to 'Show', student %>
        <%if current_user.admin %>
        <%= link_to 'Edit', edit_student_path(student) %>
        <%= link_to 'Destroy', student, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <%end%>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

  <%if current_user.admin %>
<%= link_to 'New Student', new_student_path %>
  <%end%>